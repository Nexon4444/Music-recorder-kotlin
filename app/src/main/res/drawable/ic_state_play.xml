<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/play_grey" android:state_enabled="false" >
        <shape android:shape="oval">

            <corners android:radius="80dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/play_blue" android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="oval">
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/play_blue" android:state_enabled="true" android:state_pressed="true">
        <shape android:tint="@color/colorPrimaryDark" android:shape="oval">

            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>